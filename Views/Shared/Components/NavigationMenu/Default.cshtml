@model List<MenuItem>

<nav class="navbar navbar-expand-sm navbar-toggleable-sm">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="../assets/logo.svg"
                id="company-logo"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">

                @foreach (var menuItem in Model) {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="@menuItem.Controller" asp-action="@menuItem.Action">@menuItem.Label</a>
                    </li>
                }
            </ul>
        </div>
        <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-black" type="submit">Search</button>
        </form>
    </div>
</nav>